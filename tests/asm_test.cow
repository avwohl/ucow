# Test inline assembly

var value: uint16;

print("Inline assembly test:\r\n");

# Set value using inline assembly
value := 0;
@asm "lxi h, 42";
@asm "shld ", value;

print("Value set via asm: ");
print_i16(value);
print_nl();

# Test BDOS call via inline asm
print("Direct BDOS call: ");
@asm "mvi e, 65";   # 'A'
@asm "mvi c, 2";    # Console output
@asm "call 5";      # BDOS
print_nl();
